{
	"name": "@xumi/rhooks",
	"version": "1.5.4",
	"description": "A collection of useful React hooks built with TypeScript.",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"sideEffects": false,
	"files": [
		"dist",
		"README.md",
		"README.zh-CN.md",
		"LICENSE"
	],
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"clean": "rm -rf dist",
		"type-check": "tsc --noEmit",
		"prepublishOnly": "npm run build && npm run type-check",
		"demo": "vite"
	},
	"keywords": [
		"react",
		"hooks",
		"react-hooks",
		"typescript",
		"utilities",
		"tools",
		"debounce",
		"throttle",
		"state-management",
		"frontend",
		"ui",
		"components"
	],
	"author": "liuyuanquan",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/liuyuanquan/rhooks.git"
	},
	"bugs": {
		"url": "https://github.com/liuyuanquan/rhooks/issues"
	},
	"homepage": "https://github.com/liuyuanquan/rhooks#readme",
	"engines": {
		"node": ">=16.0.0"
	},
	"peerDependencies": {
		"react": ">=16.8.0"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^20.0.0",
		"@types/node": "^24.10.1",
		"@types/react": "^18.2.0",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^4.0.0",
		"commitlint": "20.1.0",
		"tsup": "^8.0.0",
		"typescript": "^5.0.0",
		"vite": "^4.0.0"
	}
}
